#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = Array.new(9, " ")
puts "Welcome to Tic Tac Toe!"
puts "Please enter 1 - 9:"
user_input = gets.strip
index = input_to_index(user_input)
# variable_name = value
move(board, index) # this line calls the method move
display_board(board)
