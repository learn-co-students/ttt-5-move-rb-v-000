#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"

puts "Where would you like to move? (reply with position)"

pos = gets.strip

index = input_to_index(pos)

move(board, index)
display_board(board)
