#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Please enter your name so that we can greet you more personally:"
name = gets.strip
greeting(name)

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)


move(board, index, "X")

display_board(board)
