#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
input = gets.strip
iindex = 0
char = 'X'

input_to_index(input)

move(board, iindex, char)

display_board(board)
