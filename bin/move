#!/usr/bin/env ruby

require_relative '../lib/move.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
display_board(board)
puts "(Enter 1-9)"

input = gets.strip

pos = input_to_index(input)

move(board, pos, char = 'X')

display_board(board)
